<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#161716"
        android:layout_marginBottom="40dp"
        >

        <ImageView
            android:id="@+id/picRecycler"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@mipmap/ic_launcher"
            />
        <TextView
            android:id="@+id/textViewName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:text="Name:"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/picRecycler"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginLeft="40dp"
            android:gravity="start" />

        <TextView
            android:id="@+id/textViewAge"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="age:"
            android:textAlignment="textStart"
            app:layout_constraintLeft_toLeftOf="@+id/textViewName"
            app:layout_constraintTop_toBottomOf="@id/textViewName"
            android:textColor="#FFFF"
            app:layout_constraintBottom_toBottomOf="@id/picRecycler"
            android:gravity="start" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</LinearLayout>
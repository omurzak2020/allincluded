<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DayOneHomeWork" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="headerStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:layout_marginTop">40dp</item>
        <item name="fontWeight">800</item>
        <item name="android:textSize">50sp</item>
        <item name="fontFamily">@font/slackey</item>
        <item name="android:textColor">#63E8F1 </item>
    </style>
    <style name="styleToTextEdit">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
    </style>
    <style name="styleToButton" parent="Widget.AppCompat.ActionBar">
        <item name="android:textSize">20dp</item>
        <item name="trackColorInactive">@color/white</item>
    </style>
    <style name="iconStyle">
        <item name="color">#0B72DE</item>
    </style>
    <style name="styleKavoon">
        <item name="android:textSize">20dp</item>
        <item name="fontFamily">@font/kavoon</item>
        <item name="android:textColor">#F9110D </item>
    </style>
</resources>
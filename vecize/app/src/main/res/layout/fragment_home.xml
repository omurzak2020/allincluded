<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"

    tools:context=".HomeFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="5dp">


        <TextView
            android:id="@+id/sozler"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/worldmap"
            android:gravity="center"
            android:text="sozler"
            android:textColor="@color/black"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="5dp">


        <TextView
            android:id="@+id/lemalar"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/worldmap"
            android:gravity="center"
            android:text="lemalar"
            android:textColor="@color/black" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="5dp">


        <TextView
            android:id="@+id/mektubat"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/worldmap"
            android:gravity="center"
            android:text="Mektubat"
            android:textColor="@color/black" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="5dp">


        <TextView
            android:id="@+id/mesnevi"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/worldmap"
            android:gravity="center"
            android:text="Mesnevi-i Nuriye"
            android:textColor="@color/black" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="5dp">


        <TextView
            android:id="@+id/sualar"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/worldmap"
            android:gravity="center"
            android:text="Sualar"
            android:textColor="@color/black" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="5dp">


        <TextView
            android:id="@+id/muhakemat"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/worldmap"
            android:gravity="center"
            android:text="Muhakemat"
            android:textColor="@color/black" />
    </androidx.cardview.widget.CardView>






</LinearLayout>